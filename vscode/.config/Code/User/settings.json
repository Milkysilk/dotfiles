{
  // HTTP Proxy
  // "http.proxy": "http://127.0.0.1:8118",

  // Workspace
  "workbench.colorTheme": "Material Theme",
  "workbench.iconTheme": "vscode-icons",
  "window.zoomLevel": 0,
  "workbench.list.automaticKeyboardNavigation": false,
  
  // explorer
  "explorer.compactFolders": false,

  // Editor
  "files.autoSave": "onWindowChange",
  "editor.mouseWheelZoom": true,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "block-outline",
  "editor.cursorBlinking": "phase",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "[markdown]": {
    "editor.quickSuggestions": true
  },

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "html": "xhtml",
    "jsx": {
      "self_closing_tag": "xhtml"
    }
  },
  "emmet.triggerExpansionOnTab": true,

  // Programming language
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,

  // Extension
  "markdown-preview-enhanced.configPath": ".local/share/mume",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOCFILE%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "-l=zh__pinyin",
        // "-l=zh__stroke",
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex",
      "tools": [
        "xelatex"
      ]
    },
    {
      "name": "xelatex -> bibtex -> xelatex  *  2",
      "tools": [
        "xelatex",
        "bibtex",
        "xelatex",
        "xelatex"
      ]
    },
    {
      "name": "xelatex -> biber -> xelatex  *  2",
      "tools": [
        "xelatex",
        "biber",
        "xelatex",
        "xelatex"
      ]
    }
  ],
  "tslint.packageManager": "yarn",
  "eslint.packageManager": "yarn",
  "npm.packageManager": "yarn",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.config/nvim/init.vim",
  "whichkey.bindings": [
    {
      "key": " ",
      "name": "global",
      "type": "bindings",
      "bindings": [
        {
          "key": " ",
          "name": "commands",
          "type": "command",
          "command": "workbench.action.showCommands"
        },
        {
          "key": ",",
          "name": "open settings",
          "type": "command",
          "command": "workbench.action.openGlobalSettings"
        },
        {
          "key": "<",
          "name": "open settings json",
          "type": "command",
          "command": "workbench.action.openSettingsJson"
        },
        {
          "key": "k",
          "name": "open keybindings",
          "type": "command",
          "command": "workbench.action.openGlobalKeybindings"
        },
        {
          "key": "K",
          "name": "open keybindings json",
          "type": "command",
          "command": "workbench.action.openGlobalKeybindingsFile"
        },
        {
          "key": "c",
          "name": "color theme",
          "type": "command",
          "command": "workbench.action.selectTheme"
        },
        {
          "key": "i",
          "name": "file icon theme",
          "type": "command",
          "command": "workbench.action.selectIconTheme"
        },
        {
          "key": "s",
          "name": "user snippet",
          "type": "command",
          "command": "workbench.action.openSnippets"
        },
        {
          "key": "b",
          "name": "toggle side bar",
          "type": "command",
          "command": "workbench.action.toggleSidebarVisibility"
        },
        {
          "key": "p",
          "name": "toggle panel",
          "type": "command",
          "command": "workbench.action.togglePanel"
        },
        {
          "key": "l",
          "name": "change language mode",
          "type": "command",
          "command": "workbench.action.editor.changeLanguageMode"
        },
      ]
    },
    {
      "key": "v",
      "name": "views & smart select",
      "type": "bindings",
      "bindings": [
        {
          "key": "e",
          "name": "show explorer",
          "type": "command",
          "command": "workbench.view.explorer"
        },
        {
          "key": "s",
          "name": "show search",
          "type": "command",
          "command": "workbench.view.search"
        },
        {
          "key": "g",
          "name": "show source control",
          "type": "command",
          "command": "workbench.view.scm"
        },
        {
          "key": "d",
          "name": "show run",
          "type": "command",
          "command": "workbench.view.debug"
        },
        {
          "key": "x",
          "name": "show extensions",
          "type": "command",
          "command": "workbench.view.extensions"
        },
        {
          "key": "v",
          "name": "show hover",
          "type": "command",
          "command": "editor.action.showHover"
        },
      ]
    },
    {
      "key": "e",
      "name": "editor",
      "type": "bindings",
      "bindings": [
        {
          "key": "s",
          "name": "save to file",
          "type": "command",
          "command": "workbench.action.files.save"
        },
        {
          "key": "n",
          "name": "next editor",
          "type": "command",
          "command": "workbench.action.nextEditor"
        },
        {
          "key": "p",
          "name": "previous editor",
          "type": "command",
          "command": "workbench.action.previousEditor"
        },
        {
          "key": "l",
          "name": "move editor to right group",
          "type": "command",
          "command": "workbench.action.moveEditorToRightGroup"
        }
      ]
    },
    {
      "key": "w",
      "name": "editor group",
      "type": "bindings",
      "bindings": [
        {
          "key": "h",
          "name": "focus left group",
          "type": "command",
          "command": "workbench.action.focusPreviousGroup"
        },
        {
          "key": "j",
          "name": "focus below group",
          "type": "command",
          "command": "workbench.action.focusBelowGroup"
        },
        {
          "key": "k",
          "name": "focus above group",
          "type": "command",
          "command": "workbench.action.focusAboveGroup"
        },
        {
          "key": "l",
          "name": "focus right group",
          "type": "command",
          "command": "workbench.action.focusNextGroup"
        },
        {
          "key": "c",
          "name": "close active editor",
          "type": "command",
          "command": "workbench.action.closeActiveEditor"
        },
        {
          "key": "u",
          "name": "reopen closed editor",
          "type": "command",
          "command": "workbench.action.reopenClosedEditor"
        },
        {
          "key": "C",
          "name": "close editors in group",
          "type": "command",
          "command": "workbench.action.closeEditorsInGroup"
        },
        {
          "key": "1",
          "name": "focus 1st window",
          "type": "command",
          "command": "workbench.action.focusFirstEditorGroup"
        },
        {
          "key": "2",
          "name": "focus 2nd window",
          "type": "command",
          "command": "workbench.action.focusSecondEditorGroup"
        },
        {
          "key": "3",
          "name": "focus 3rd window",
          "type": "command",
          "command": "workbench.action.focusThirdEditorGroup"
        },
        {
          "key": "4",
          "name": "focus 4th window",
          "type": "command",
          "command": "workbench.action.focusFourthEditorGroup"
        },
        {
          "key": "5",
          "name": "focus 5th window",
          "type": "command",
          "command": "workbench.action.focusFifthEditorGroup"
        },
        {
          "key": "6",
          "name": "focus 6th window",
          "type": "command",
          "command": "workbench.action.focusSixthEditorGroup"
        },
        {
          "key": "7",
          "name": "focus 7th window",
          "type": "command",
          "command": "workbench.action.focusSeventhEditorGroup"
        },
        {
          "key": "8",
          "name": "focus 8th window",
          "type": "command",
          "command": "workbench.action.focusEighthEditorGroup"
        },
      ]
    },
    {
      "key": "g",
      "name": "go to",
      "type": "bindings",
      "bindings": [
        {
          "key": "d",
          "name": "go to defination",
          "type": "command",
          "command": "editor.action.revealDefinition"
        }
      ]
    }
  ],
}
